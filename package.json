{
  "name": "esphome_ntchrono",
  "version": "1.0.0",
  "description": "Night Table Chrono - Smart Alarm and Clock for my night table",
  "main": "./dist/main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "font_x": "svgtofont --sources ./src/icon --output ./dist/font --fontName glyps-font --startUnicode 0x16",
    "font": "npm run clean && npm run build && node dist/main.js",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "tsc-watch --onSuccess \"node .\"",
    "clean": "rimraf dist"
  },
  "author": "@dianlight",
  "license": "Apache-2.0",
  "dependencies": {
    "@iconify/tools": "^4.0.6",
    "rimraf": "^6.0.1",
    "svgtofont": "^6.0.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "tsc-watch": "^6.2.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**",
      "dist/fonts/"
    ]
  }
}
